/* custom-tab-bar/custom-tab-bar.wxss */
page {
  display: flex;
  flex-direction: column;
  height: 100%;
}

.nav-tabs {
  width: 100%;
  display: flex;
  position: fixed;
  bottom: 0;
  height:50px;
}

.tab-list {
  flex:1;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column-reverse;
  background: #fcfcfc;
}

.tab-text {
  font-size: 24rpx;
  line-height: 35rpx;
  color: #5f5f5f;
}

.iconPath {
  width:80rpx;
  height: 80rpx;
}

.tab-content {
  flex: 1;
}

.default {
  display: flex;
  flex-direction: column;
  justify-content: center;
box-shadow:  5px 5px 10px #b0b0b0, 
             -5px -5px 10px #ffffff;
             background: linear-gradient(145deg, #ffffff, #e6e6e6);
}

.active {
  display: flex;
  flex-direction: column;
  justify-content: center;
box-shadow:  5px 5px 10px #b0b0b0, 
             -5px -5px 10px #ffffff;
background: linear-gradient(145deg, #e6e6e6, #ffffff);
  
}

.show {
  display: block;
  flex: 1;
}

.hidden {
  display: none;
  flex: 1;
}